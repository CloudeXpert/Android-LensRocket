<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".AccessFriendsActivity" >

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        
        android:contentDescription="@null"
        
        android:src="@drawable/background_glow" />
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/medium_margin"
        android:paddingTop="@dimen/medium_margin" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/lblInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/access_friends_request"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnAllowAccess"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/sign_up_button_style"
            android:onClick="tappedAllowAccess"
            android:textColor="@color/splash_font"
            android:paddingLeft="@dimen/button_text_padding"
            android:paddingRight="@dimen/button_text_padding"
            android:textSize="@dimen/sign_up_button_text_size"
            android:text="@string/allow_access" />

    </LinearLayout>

</RelativeLayout>